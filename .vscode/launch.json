    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Custom launch",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/<program>"
            ],
            "processCreateCommands": [
                "settings set target.run-args value1 value2 value3",
                "process launch"
            ]
        },
        {
            "name": "Debug unit tests in library 'coman'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test"
                ]
            }
        },
        {
            "name": "Debug executable 'coman'",
            "type": "lldb",
            "request": "launch",
            "env": {
                "COMAN_JSON": "test.json"
            },
            "cargo": {
                "args": [
                    "run"
                ]
            },
            "args": [
                "man",
                "update",
                "test1",
                "-e", "t1", "-H", "accept:",
            ]
        },
        {
            "name": "Debug unit tests in executable 'coman'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=coman"
                ]
            }
        }
    ]
}